<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mauto.bigbaby.DiffUtil.BigDiffUtilsActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acb_fetch_data"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:onClick="onClickFetchData"
        android:background="@color/colorPrimary"
        android:layout_margin="10dp"
        android:elevation="4dp"
        android:text="fetch data"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_remote_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/acb_fetch_data"></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
