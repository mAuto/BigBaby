<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.mauto.bigbaby.lab.store.BigLabStoreActivity">

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickAddInt"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="add int"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickAddLong"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="add long"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickAddFloat"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="add float"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickAddString"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="add String"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickAddBoolean"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="add boolean"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickContains"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="contains"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickRemove"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="remove"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickClear"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="clear"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickGetAll"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="get all"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickRegister"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="register"
            android:textAllCaps="false"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:onClick="onClickUnregister"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            android:text="unregister"
            android:textAllCaps="false"/>

    </LinearLayout>
</ScrollView>

